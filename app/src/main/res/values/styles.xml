<resources>

    <style name="ButtonBar" parent="@android:style/ButtonBar"></style>

    <style name="ButtonBarButton"></style>

    <style name="Holo.ButtonBar" parent="ButtonBar">
        <item name="android:paddingTop">0dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
        <item name="android:paddingBottom">0dip</item>
        <item name="divider">?android:attr/dividerVertical</item>
        <item name="showDividers">middle</item>
        <item name="dividerPadding">12dip</item>
        <item name="background">@null</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Transparent" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="MyTheme1" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Setting values in the android namespace affects API levels 11+ -->
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>

        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="MyThemeDrawer" parent="MyTheme1">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBarDrawer</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">

        <!-- Setting values in the android namespace affects API levels 11+ -->
        <item name="android:background">@color/purple</item>
        <item name="background">@color/purple</item>
    </style>

    <style name="Widget.Styled.ActionBarDrawer" parent="@style/Widget.Styled.ActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
        <item name="homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">

        <!-- <item name="android:textColor">#FFFFFF</item> -->
        <item name="android:textColor">@color/whitish</item>
    </style>

    <style name="FeedListItemButton">
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Settings_table_row">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Settings_checkbox_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Settings_checkbox_description">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_span">2</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Settings_checkbox">
        <item name="android:text"></item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="Configure_friend_field_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Configure_friend_field_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Pager_title_strip">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Search_field_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Search_field">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>