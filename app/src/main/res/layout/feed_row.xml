<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/unread_indicator"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/message_holder"
        android:layout_alignBottom="@+id/message_holder"
        android:layout_alignParentRight="true"
        android:background="@color/purple"/>

    <LinearLayout
        android:id="@+id/message_holder"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@id/unread_indicator"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingBottom="17dp"
        android:minHeight="100dp"
        android:background="@drawable/feed_item_bg"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/upvoteView"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:paddingEnd="13dp"
            android:paddingStart="13dp"
            android:text="100"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/trustView"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:paddingEnd="13dp"
            android:paddingStart="13dp"
            android:text="0.01"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/hashtagHolder"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="15dp" >

            <TextView
                android:id="@+id/hashtagView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/expand"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingStart="13dp"
            android:src="@drawable/ic_expand"
            android:alpha="0.2"/>

    </LinearLayout>

</RelativeLayout>